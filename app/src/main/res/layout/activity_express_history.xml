<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_express_history"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ckz.demo1.activity.express.ExpressHistoryActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/express_bar_color">
        <ImageView
            android:id="@+id/back_btn"
            style="@style/top_back_style"
            android:src="@drawable/tool_bar_back" />
        <TextView
            style="@style/top_title_style"
            android:textColor="@color/whilte"
            android:text="@string/query_history"/>
        <ImageView
            style="@style/top_back_style"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete"
            android:id="@+id/delete_all"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/state_tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/express_bar_color"
        app:tabIndicatorColor="@color/whilte"
        app:tabSelectedTextColor="@color/whilte"
        app:tabTextColor="@color/whilte"
        app:tabTextAppearance="@style/TabLayoutTextSize"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/content_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>
</LinearLayout>
