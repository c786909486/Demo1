<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/tag_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whilte"
                android:gravity="center_horizontal">
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:id="@+id/hot_tag"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/change_another"
                    android:text="换一批"
                    android:textSize="@dimen/textSize"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/change_another"
                    />
            </LinearLayout>
            <com.example.ckz.demo1.view.NestedListView
                android:divider="#00000000"
                android:dividerHeight="0dp"
                android:id="@+id/history_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.example.ckz.demo1.view.NestedListView>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/clear_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除历史记录"
        android:textSize="@dimen/textSize"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/delete_dark"

        />
</LinearLayout>