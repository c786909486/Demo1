<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company_choose"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ckz.demo1.activity.express.CompanyChooseActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/express_bar_color">
        <ImageView
            style="@style/top_back_style"
            android:id="@+id/back_btn"
            android:src="@drawable/tool_bar_back"/>
        <TextView
           style="@style/top_title_style"
            android:textColor="@color/whilte"
            android:text="@string/choose_company"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:layout_width="match_parent"
            android:overScrollMode="never"
            android:layout_height="match_parent"
            android:id="@+id/company_list"></ListView>
        <com.example.ckz.demo1.view.SideBar
            android:id="@+id/side_bar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            tools:ignore="RtlHardcoded" />
        <TextView
            android:visibility="gone"
            android:id="@+id/show_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/center_text_bg"
            android:textSize="@dimen/cookTitleSize"
            android:layout_centerInParent="true"
            android:text="M"/>
    </RelativeLayout>

</LinearLayout>
